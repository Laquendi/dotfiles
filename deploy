#!/bin/bash

dotfiles=$PWD
cd ~

deploy() {
  t=".${1##*/}"
  ln -fs "$dotfiles/$1" "${2:-$t}"
}

dotfiles_cower() {
  deploy cower/cower .config/cower
}

dotfiles_dircolors() {
  deploy dircolors/dircolors
}

dotfiles_git() {
  deploy git/gitconfig
}

dotfiles_htop() {
  deploy htop/htoprc
}

dotfiles_ncmpcpp() {
  deploy ncmpcpp
}

dotfiles_nethack() {
  deploy nethack/nethackrc
}

dotfiles_tmux() {
  deploy tmux/tmux.conf
}

dotfiles_vim() {
  deploy vim
  deploy vim/vimrc
  deploy vim/gvimrc
}

dotfiles_X() {
  deploy X/Xresources
  deploy X/xinitrc
  deploy X/gtkrc-2.0
}

dotfiles_xmonad() {
  deploy xmonad
}

dotfiles_zsh() {
  deploy zsh/zshrc
  deploy zsh/zprofile
}

installer() {
  while (( $# )); do
    "dotfiles_$1"
    shift
  done
}

if [[ $# -eq 0 ]]; then
  deploy zsh vim dircolors ncmpcpp xmonad X tmux \
         git htop cower nethack
else
  deploy $*
fi
