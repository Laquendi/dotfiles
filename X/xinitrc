#!/bin/bash

cd

if [[ -d /etc/X11/xinit/xinitrc.d ]]; then
  for f in /etc/X11/xinit/xinitrc.d/*; do
    [[ -x "$f" ]] && . "$f"
  done
  unset f
fi

case ${2:-xmonad} in
  xbmc)
    exec xbmc-standalone ;;
  gnome)
    exec gnome-session ;;
  xmonad)
    exec xmonad ;;
  *)
    echo >&2 "Unrecognized command $2"
    exit 1;
esac
